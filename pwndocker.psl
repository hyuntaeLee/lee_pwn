param (
    [Parameter(Mandatory=$true, Position=0)]
    [string]$version
)

Write-Host "Running $version version pwndocker..."

switch ($version) {
    "16.04" {
        docker run -it --rm --cap-add SYS_PTRACE --security-opt seccomp:unconfined --name 16.04 -v ${PWD}/study:/study pwnbuntu:16.04 /usr/bin/zsh
    }
    "18.04" {
        docker run -it --rm --cap-add SYS_PTRACE --security-opt seccomp:unconfined --name 18.04 -v ${PWD}/study:/study pwnbuntu:18.04 /usr/bin/zsh
    }
    "20.04" {
        docker run -it --rm --cap-add SYS_PTRACE --security-opt seccomp:unconfined --name 20.04 -v ${PWD}/study:/study pwnbuntu:20.04 /usr/bin/zsh
    }
    "22.04" {
        docker run -it --rm --cap-add SYS_PTRACE --security-opt seccomp:unconfined --name 22.04 -v ${PWD}/study:/study pwnbuntu:22.04 /usr/bin/zsh
    }
    default {
        Write-Host "Unsupported version specified"
    }
}
